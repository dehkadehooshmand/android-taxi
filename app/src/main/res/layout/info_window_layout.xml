<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layoutDirection="ltr">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="صندلی خالی 2"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"

        android:gravity="center_horizontal"
        android:id="@+id/title"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/Linear"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/title"
      >

        <ImageView
            android:layout_width="15dp"
            android:id="@+id/p1"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/person_black"/>

        <ImageView
            android:layout_width="15dp"
            android:id="@+id/p2"
            android:layout_toRightOf="@+id/p1"
            android:layout_height="50dp"
            android:src="@drawable/person_black"/>

        <ImageView
            android:layout_width="15dp"
            android:id="@+id/p3"
            android:layout_toRightOf="@+id/p2"
            android:layout_height="50dp"
            android:src="@drawable/person_white"
            />

        <ImageView
            android:layout_width="15dp"
            android:id="@+id/p4"
            android:layout_toRightOf="@+id/p3"
            android:layout_height="50dp"
            android:src="@drawable/person_white"
            />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#f0f0f0" />
    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/Linear"
        android:background="@drawable/info_window_button"
        android:text="انتخاب تاکسی"
        android:textColor="@color/white"/>
    <View
        android:layout_width="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#f0f0f0" />
</RelativeLayout>